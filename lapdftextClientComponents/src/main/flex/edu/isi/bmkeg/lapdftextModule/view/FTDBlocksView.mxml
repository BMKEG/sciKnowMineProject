<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="100%"
		height="100%">	
	
	<s:layout>
		<s:VerticalLayout paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5"/>
	</s:layout>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			
			import edu.isi.bmkeg.ftd.model.*;
	
			import edu.isi.bmkeg.utils.SimpleUtils;
			
			import mx.collections.ArrayCollection;
			
			import spark.events.IndexChangeEvent;
			
			[Bindable]
			public var imageList:ArrayCollection = new ArrayCollection();
						
		]]>
	</fx:Script>
	
	<s:List id="lst"			
			width="100%"
			height="100%"
			itemRenderer="edu.isi.bmkeg.lapdftextModule.view.FTDPageImageRenderer"
			horizontalCenter="0" verticalCenter="0"
			useVirtualLayout="false"
			dataProvider="{imageList}">
		<s:layout>
			<s:VerticalLayout gap="0" requestedRowCount="3" horizontalAlign="justify" />
		</s:layout>
	</s:List>	
</s:Group>
