<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="100%"
		height="100%">	
	
	<s:layout>
		<s:VerticalLayout paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5"/>
	</s:layout>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			
			import edu.isi.bmkeg.ftd.model.*;
	
			import edu.isi.bmkeg.utils.SimpleUtils;
			
			import mx.collections.ArrayCollection;
			
			import spark.events.IndexChangeEvent;
			
			[Bindable]
			public var loadedFtd:FTD;
			
			// API Methods
			
			public function clearFormFields():void
			{
				loadedFtd = null;
			}
			
		]]>
	</fx:Script>
	
	<s:Label id="ftdLabel" lineHeight="3"  lineBreak="toFit"  
			fontSize="14" fontWeight="bold" width="100%"
			text="{SimpleUtils.stripPathToName(loadedFtd.name)}"/>		
	
	<s:Scroller width="100%" height="100%">
		
		<s:RichEditableText id="text" 
						clipAndEnableScrolling="true" 
						selectable="true" 
						editable="false"
						text="{loadedFtd.text}">
		</s:RichEditableText>
	
	</s:Scroller>

</s:Group>
